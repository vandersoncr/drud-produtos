<!-- Botão que abre o modal -->
<button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{product.id}}">
  Remover
</button>

<!-- Modal -->
<div class="modal fade" id="deleteModal{{product.id}}" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Confirmar Remoção</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>

      <div class="modal-body">
        <p>Você tem certeza que deseja remover o produto <strong>{{product.name}}</strong>?</p>
      </div>

      <div class="modal-footer">
        <form action="/products/remove/{{product.id}}" method="POST">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-danger">Remover</button>
        </form>
      </div>

    </div>
  </div>
</div>


